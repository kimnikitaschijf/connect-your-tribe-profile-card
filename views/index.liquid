{% render 'partials/head.liquid' %}

{% comment %} voorkant {% endcomment %}
 
{% comment %} <details>
  <summary>Data</summary>
  <pre>{{ person | json:4 }}</pre>
</details> {% endcomment %}

<section id="card-layout">
  <div class="card-inner">

    <article id="front">
      <h1>{{ person.name }}</h1>
      <img src="assets/IMG_44762.JPG" alt="me" class="main-photo">
      <p>Frontend Designer And Developer</p>
      <button id="flip-card-btn-turn-to-back"><img src="assets/refresh.png" alt="Flip"></button>
    </article>

    {% comment %} achterkant {% endcomment %}
    <article id="back">
      <h2>Over mij:</h2>
      <div class="info-buttons">
        <details>
          <summary>Privé</summary>
          <p class="info-text"> 🏠 {{person.custom.location}}</p>
          <p class="info-text"> 🎤 {{person.custom.favoriteartists}}</p>
          <p class="info-text"> 💪 {{person.custom.skill}}</p>
          <p class="info-text"> 🎨 {{person.custom.favoritecolor}}</p>
        </details>
        <details>
          <summary>Hobby's</summary>
          <p class="info-text"> 📖 {{person.custom.hobbys}}</p>
        </details>
        <details>
          <summary>Studie</summary>
          <p class="info-text"> 🏫 {{person.custom.studie}}</p>
        </details>
      </div>

      <h3>Contact:</h3>
      <footer>
        <p class="email-icon">kimnikitaschijfhva@icloud.com</p>
        <p class="phone-icon">+31 6 41828215</p>
        <p class="location-icon">Heerhugowaard</p>
      </footer>
      <button id="flip-card-btn-turn-to-front"><img src="assets/refresh.png" alt="Flip"></button>
    </article>

  </div>
</section>

<script src="scripts/script.js"></script>

{% render 'partials/foot.liquid' %}